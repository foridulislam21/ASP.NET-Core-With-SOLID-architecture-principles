@model eCommerceApp.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="holder" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpireDate" class="control-label"></label>
                <input type="date" asp-for="ExpireDate" class="form-control" />
                <span asp-validation-for="ExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category Name</label>
                <select class="form-control" id="selectMenu">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8 mt-5">
        <div class="card bg-light mb-3" style="max-width: 30rem;">
            <div class="card-header">
                <input type="button" id="inputMusk" class="btn btn-primary btn-sm float-right" value="Upload Image" />
            </div>
            <div class="card-body" id="ImageHolder">
            </div>
            <div class="validation" style="display:none;"> Upload Max 4 Files allowed </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="~/js/Product/ProductImage.js"></script>
    <script type="text/javascript">
        $(document).ready(() => {
            $.ajax({
                url: "/api/categories",
                type: "GET",
                accept: "application/json",
                success: (categories) => {
                    var categoryList = $("#selectMenu");
                    $.each(categories,
                        (index, category) => {
                            var optgroup = "<option value='" + category.id + "'>" + category.name + "< />";
                            categoryList.append(optgroup);
                        });
                },
                error: (response) => {

                }
            });
        });
    </script>
}