                        String img64 = Convert.ToBase64String(Model.Image);
                        String img64url = string.Format("data:Image/" + Model.Image + ";base64,{0}", img64);
                        <img src="@img64url" class="card-img-top pl-4" style="height:150px; max-width: 250px" alt="Model">
                    }
                }
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h5 class="card-subtitle">Price: @Model.Price</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
    </div>
</div>